<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgy.ShoppingMall.dao.ProductDao">

<!--     <select id="list" resultType="com.lgy.ShoppingMall.dto.ProductDto"> -->
    <select id="list" parameterType="hashmap" resultType="com.lgy.ShoppingMall.dto.ProductDto">
        select procode, catecode, proname, proprice, proinfo from product where catecode=#{catecode}
    </select>
    
    <select id="contentView" parameterType="hashmap" resultType="com.lgy.ShoppingMall.dto.ProductDto">
        select procode, catecode, proname, proprice, proinfo from product where procode=#{procode}
    </select>
    
</mapper>



